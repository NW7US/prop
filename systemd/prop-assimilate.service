[Unit]
Description=Prop Assimilation Engine
BindsTo=prop-api.service prop-postgres.service
After=prop-api.service prop-postgres.service
[Service]
ExecStart=docker run --rm --name=%N -u 1001 --env-file /etc/kc2gprop/db.env --link prop-api:prop-api --link prop-postgres:pg -e PROP_API=http://prop-api:4761 -p 5005:5000 prop-assimilate
ExecStartPost=sleep 2
ExecStop=docker stop %N
[Install]
WantedBy=multi-user.target
